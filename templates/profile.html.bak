<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>LRN - MyProfile</title>

    <!-- Bootstrap core CSS -->
    <%= stylesheetTag("css/bootstrap.min.css") %>
    <%= stylesheetTag("css/profile.css") %>
    <!-- Custom styles for this template -->

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">LRN</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="#">Home
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">MyProfile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Messages</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Find</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <div class="col-lg-3">
          <h1 class="my-4"></h1>
          <div class="list-group  m_cFixed m_cBlock">
            <a href="#m_iPersonalInfo" class="list-group-item active">Personal Information</a>
            <a href="#m_iSubjects" class="list-group-item" title="Jump to subjects">Subjects</a>
            <a href="#m_iLanguages" class="list-group-item" title="Jump to languages">Languages</a>
            <a href="#m_iTutorSess" class="list-group-item" title="Jump to tutoring sessions">Tutoring Sessions</a>
            <a href="<%= updateProfilePath() %>" class="btn btn-success" title="Update profile">Update</a>
          </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

          <div class="card mt-4">
            <h2 class="card-title">MyProfile</h2>
            <div class="m_cMulticontainer">
              <div class="m_cHalfpiece">
              <img class="card-img-top img-fluid m_cImg" src="<%= assetPath("images/selfie.png") %>" alt="user profile picture">
              </div>
                <div class="card-header halfpiece m_cCenterBox">
                  <div class="card-header">
                    <h1 >Bobby Tefla</h1>
                  </div>
                </div>
                <!--<span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
                4.0 stars-->
            </div>
          </div>
          <!-- /.card -->

          <div class="card card-outline-secondary my-4">
            <div class="card-header">
              <h2 id="m_iPersonalInfo" class="card-title">Personal Information</h2>
            </div>
            <div class="card-body">
              <div class="m_cMulticontainer">
                <div class="m_cHalfpiece">
                <h4>Address</h4>
                <p class="card-text"> 645 Mt. Yosemite dr <br>
                  San Diego, CA 92084</p>
                </div>
                <hr>
                <div class="m_cHalfpiece">
                <h4>Phone</h4>
                <p class="card-text">951&dash;824&dash;6895</p>
                </div>
                <hr>
              </div>
              <hr>
              <div class="m_cMulticontainer">
                <div class="m_cHalfpiece">
                <h4>Contact Email</h4>
                <p class="card-text">bobby_tefla@yahoo.com</p>
                </div>
                <hr>
                <div class="m_cHalfpiece">
                <h4>Account Email</h4>
                <p class="card-text">btefla@gmail.com</p>
                </div>
                <hr>
              </div>
            </div>
          </div>

          <div class="card card-outline-secondary my-4">
            <div class="card-header">
              <h2 id="m_iSubjects">Subjects</h2>
              <small class="text-muted">Subjects you need help in</small>
            </div>
            <div class="card-body">
              <div class="m_cMulticontainer">
                <div class="m_cHalfpiece">
                  <h4>Mathematics</h4>
                  <ul>
                    <li >Linear Algebra</li>
                    <li>Differential Equations</li>
                  </ul>
                </div>
                <div class="m_cHalfpiece">
                  <h2>Chemistry</h2>
                  <ul>
                    <li>Introduction to Chemistry</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="card card-outline-secondary my-4">
            <div class="card-header">
              <h2 id="m_iLanguages">Languages</h2>
              <small class="text-muted">Languages you're comfortable learning in</small>
            </div>
            <div class="card-body">
              <div class="m_cMulticontainer">
                <div class="m_cHalfpiece">
                  <ul>
                    <li>English</li>
                  </ul>
                </div>
                <div class="m_cHalfpiece">
                  <ul>
                    <li>Chinese</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="card card-outline-secondary my-4">
            <div class="card-header">
              <h2 id="m_iTutorSess">Tutoring Sessions</h2>
              <small class="text-muted">TODO</small>
            </div>
            <div class="card-body">
              <div class="m_cMulticontainer">
                <div class="m_cHalfpiece">
                </div>
                <div class="m_cHalfpiece">
                </div>
              </div>
            </div>
          </div>
          <!--<small class="text-muted">Posted by Anonymous on 3/1/17</small>-->
          <!-- /.card -->

        </div>
        <!-- /.col-lg-9 -->

      </div>

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; LRN Fall 2018</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <%= javascriptTag("js/jquery.min.js") %>"
    <%= javascriptTag("js/bootstrap.bundle.min.js") %>"

  </body>

</html>
